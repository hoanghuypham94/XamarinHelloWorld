<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OurFirstPrismSample.View.CustomMasterDetailPage">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout BackgroundColor="Silver" Padding="20">
                <Button Text="Next Page 1"
                        TextColor="Blue"
                        BackgroundColor="Gray"
                        Command="{Binding OnNavigateCommand}"
                        CommandParameter="NavigationPage/MyViewPageOne"/>
                <Button Text="Next Page 2"
                        TextColor="Red"
                        BackgroundColor="Gray"
                        Command="{Binding OnNavigateCommand}"
                        CommandParameter="NavigationPage/MyViewPageTwo"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
