<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
                        xmlns:const="clr-namespace:XamarinDemo.Constants"
                        x:Class="XamarinDemo.App">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <Style TargetType="Grid" x:Key="GridBaseStyle">
                <Setter
                    Property="ColumnSpacing"
                    Value="0"/>
                <Setter
                    Property="RowSpacing"
                    Value="0"/>
            </Style>

            <Style TargetType="Button" x:Key="ButtonBaseStyle">
                <Setter
                    Property="FontSize"
                    Value="{x:Static const:SizeConst.FontSize15}"/>
                <Setter
                    Property="TextColor"
                    Value="{x:Static const:ColorConst.White}"/>
                <Setter
                    Property="BackgroundColor"
                    Value="{x:Static const:ColorConst.IC8BrownLight}"/>
            </Style>
        </ResourceDictionary>
    </prism:PrismApplication.Resources>

</prism:PrismApplication>